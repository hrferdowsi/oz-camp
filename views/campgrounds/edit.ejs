<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=camp.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value='<%=camp.name%>' placeholder="name">
                </div>
                <!-- price -->
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" value= '<%=camp.price%>' placeholder="price" min='0.01' step="0.01">
                </div>
                <!-- image URL -->
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value='<%=camp.image%>' placeholder="image url">
                </div>
                <!-- map -->
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= camp.location %>">
                </div>
                <!-- description -->
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value="<%=camp.description%>" placeholder="description">
                </div>
                <!-- Submit button -->
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>

            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>








